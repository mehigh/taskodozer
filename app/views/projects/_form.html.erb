<%= semantic_form_for @project do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :label => "Project Name" %>
    <%= f.input :slug %>
    <%= f.input :status, :as => :select, :collection => Project::STATUSES %>
    <%= f.input :company %>
    <% if @project.new_record? %>
      <%= f.input :repository, :as => :boolean, :label => "Create repository" %>
    <% end %>
    <%= f.input :description %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>