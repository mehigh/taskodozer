<% title "Tasks" %>

<table>
  <tr>
    <th>Description</th>
    <th>Status</th>
    <th>Duration</th>
    <th>Priority</th>
    <th>User</th>
    <th>Assigned User</th>
    <th>Parent</th>
    <th>Project</th>
  </tr>
  <% for task in @tasks %>
    <tr>
      <td><%= task.description %></td>
      <td><%= task.status %></td>
      <td><%= task.duration %></td>
      <td><%= task.priority %></td>
      <td><%= task.user_id %></td>
      <td><%= task.assigned_user_id %></td>
      <td><%= task.parent_id %></td>
      <td><%= task.project_id %></td>
      <td><%= link_to "Show", task %></td>
      <td><%= link_to "Edit", edit_task_path(task) %></td>
      <td><%= link_to "Destroy", task, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Task", new_task_path %></p>
