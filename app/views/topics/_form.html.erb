<%= form_for @topic do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :discussion_id %><br />
    <%= f.text_field :discussion_id %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit %></p>
<% end %>

