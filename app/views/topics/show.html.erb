<% title @topic.title %>
<div class="meta"><p><%= @topic.user.username %> posted this topic in <%= link_to @topic.discussion.title, project_discussion_path(@project, @topic.discussion) %> on <%= @topic.created_at.to_s(:short_date) %>.</p></div>

<div class="content">
  <%= @topic.content %>
</div>

<p>
  <%= link_to "Edit", edit_project_topic_path(@project,@topic) %> |
  <%= link_to "Destroy", project_topic_path(@project,@topic), :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", project_topics_path(@project) %>
</p>
