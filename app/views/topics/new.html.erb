<% title "New Topic" %>

<%= semantic_form_for @topic, :url => project_topics_path(@project) do |f| %>
  <%= f.inputs do %>
    <%= f.input :discussion, :collection => @project.discussions, :label => "Category" %>
    <%= f.input :title, :label => "Topic title" %>
    <%= f.input :content, :label => "Description" %>
    <%= f.input :subscribers, :collection => @subscribers, :label => "Subscribers", :as => :check_boxes %>
  <% end %>
  <%= f.buttons %>
<% end %>

<p><%= link_to "Back to List", project_topics_path(@project) %></p>
