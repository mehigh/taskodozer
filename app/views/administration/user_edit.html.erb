<% title "Edit user #{@user.username}" %>

<%= semantic_form_for @user, :url => administration_user_update_path(@user) do |f| %>
  <%= f.inputs do %>
  	<% unless current_user == @user && current_user.admin? %>
  	<%= f.input :role,	:as => :select, :collection => User::ROLES %>
  	<% end %>
  	<%= f.input :company %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>

<% end %>